<h1>Create new text</h1>
<%= form_for :text, :html => {:class => "form-horizontal"} do |f| %>

    <div class="form-group">
      <%= f.label :title, class: "control-label col-xs-2" %>
      <%= f.text_field :title %>
    </div>

    <div class="form-group">
      <%= f.label :description, class: "control-label col-xs-2" %>
      <%= f.text_field :description %>
    </div>

    <div class="form-group">
      <%= f.label :content, class: "control-label col-xs-2" %>
      <%= f.text_area :content, :cols => "100", :rows => "50" %>
    </div>

    <%= f.hidden_field :exam_id, :value => params[:exam_id] %>

    <p>
      <%= f.submit "Submit", class: "btn btn-default btn-primary" %>
    </p>
<% end %>