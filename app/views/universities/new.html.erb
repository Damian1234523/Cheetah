<h1>Create new university</h1>
<%= form_for :university, :html => {:class => "form-horizontal"} do |f| %>

    <div class="form-group">
      <%= f.label :name, class: "control-label col-xs-1" %>
      <%= f.text_field :name %>
    </div>

    <div class="form-group">
      <%= f.label :address, class: "control-label col-xs-1" %>
      <%= f.text_field :address %>
    </div>

     <div class="form-group">
      <%= f.label :typ, class: "control-label col-xs-1" %>
      <%= f.text_field :typ%>
     </div>

    <p>
      <%= f.submit "Submit", class: "btn btn-default btn-primary" %>
    </p>
<% end %>
