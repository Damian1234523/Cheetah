<%= render '/breadcru' %>

<h1 style="margin-top: 0em"> <%= @course.name %> </h1>
<li> <%=link_to("Create lecturer", lecturers_new_path(course_id: @course), {:class => "btn btn-default", style: "margin-down:10px"})%></li>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Name</th>
      <th>Lastname</th>
    </tr>
  </thead>
  <% @lecturer.each do |lec| %>
    <tr class="table-row" data-href=<%= university_course_lecturer_path(params[:university_id], lec.course_id, lec) %>>
      <td><%= lec.title %></td>
      <td><%= lec.name %></td>
      <td><%= lec.lastname %></td>
    </tr>
  <%end%>
</table>