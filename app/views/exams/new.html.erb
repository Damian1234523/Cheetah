<h1>Create new exam</h1>

<%= form_for :lecturer, :html => {:class => "form-horizontal"} do |f| %>

    <div class="form-group">
      <%= f.label :name, class: "control-label col-xs-2" %>
      <%= f.text_field :name %>
    </div>

    <div class="form-group">
      <%= f.label :year, class: "control-label col-xs-2" %>
      <%= f.text_field :year %>
    </div>

    <div class="form-group">
      <%= f.label :description, class: "control-label col-xs-2" %>
      <%= f.text_field :description %>
    </div>

    <%= f.hidden_field :lecturer_id, :value => params[:lecturer_id] %>

    <p>
      <%= f.submit "Submit", class: "btn btn-default btn-primary" %>
    </p>
<% end %>